<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.ipcableboxguide" name="IP Cable Cloud Guide" version="2.0.0" provider-name="IP Cable Cloud">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
		<import addon="script.module.requests"/>
		<import addon="script.module.beautifulsoup4"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
            <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">IP Cable Cloud Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</summary>
		<language></language>
		<platform>all</platform>
		<license>GPLv2</license>
		<assets>
          <icon>resources/icon.png</icon>
          <fanart>resources/fanart.jpg</fanart>
          <screenshot>resources/screenshot001.png</screenshot>
          <screenshot>resources/screenshot002.png</screenshot>
          <screenshot>resources/screenshot003.png</screenshot>
        </assets>
	</extension>
</addon>
